{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "platform": "azure",
  "labels": ["renovate"],
  "extends": [
    "config:base",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "nuget"
  ],
  "stabilityDays": 3,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "dependencyDashboard": false,
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "packageRules": [
    {
      "matchManagers": ["nuget"],
      "groupName": "NuGet dependencies"
    },
    {
      "matchManagers": ["nuget"],
      "matchPackagePatterns": [
        "^Microsoft\\.Extensions\\."
      ],
      "groupName": "NuGet .NET runtime libraries dependencies",
      "description": "These packages are usually bound to a specific major .NET framework version manually managed in the csproj file.",
      "extends": [":disableMajorUpdates"]
    },
    {
      "matchPackageNames": ["dotnet-sdk"],
      "groupName": "Dotnet SDK",
      "description": "Only update patch and minor for the dotnet SDK version within the global.json",
      "extends": [":disableMajorUpdates"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}