{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "platform": "azure",
  "endpoint": "https://dev.azure.com/gsoft",
  "repositories": [
    "Shared-Assets/Leap"
  ],
  "extends": [
    "github>workleap/renovate-config",
    "github>workleap/renovate-config:all-automerge.json"
  ],
  "customManagers": [
    {
      "description": "Docker images referenced in C# code",
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.cs$/"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "DockerComposeImageName\\(\"(?<depName>[^:]+):(?<currentValue>[^\"]+)\"\\)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": ".NET Aspire 8.2.0 introduced a regression (https://github.com/dotnet/aspire/issues/5490)",
      "matchPackageNames": [
        "Aspire.Hosting.AppHost"
      ],
      "allowedVersions": "!/^8\\.2\\.0$/"
    },
    {
      "matchManagers": [
        "nuget"
      ],
      "groupName": "NuGet .NET runtime libraries dependencies",
      "description": "These packages are usually bound to a specific major .NET framework version manually managed in the csproj file.",
      "extends": [
        ":disableMajorUpdates"
      ],
      "matchPackageNames": [
        "/^Microsoft\\.Extensions\\./"
      ]
    },
    {
      "matchManagers": [
        "nuget"
      ],
      "matchPackageNames": [
        "System.CommandLine",
        "System.CommandLine.*"
      ],
      "allowedVersions": "<= 2.0.0-beta4.22272.1",
      "description": "Breaking changes are still being introduced, we'll wait for a stable release before updating."
    }
  ]
}
