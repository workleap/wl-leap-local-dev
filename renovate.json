{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "platform": "azure",
  "endpoint": "https://dev.azure.com/gsoft",
  "repositories": [
    "Shared-Assets/Leap"
  ],
  "extends": [
    "github>gsoft-inc/renovate-config"
  ],
  "customManagers": [
    {
      "description": "Workleap Event Grid emulator",
      "customType": "regex",
      "fileMatch": [
        "\\.cs$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\"(?<depName>workleap/eventgridemulator):(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "description": ".NET Aspire workload rollback file (https://github.com/dotnet/aspire/discussions/2230)",
      "customType": "regex",
      "fileMatch": [
        "^rollback.json$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\"microsoft.net.sdk.aspire\":\\s*\"(?<currentValue>[^/]+)/[^\"]+\""
      ],
      "datasourceTemplate": "nuget",
      "versioningTemplate": "nuget",
      "depNameTemplate": "Aspire.Hosting.AppHost"
    }
  ],
  "packageRules": [
    {
      "description": ".NET Aspire 8.2.0 introduced a regression (https://github.com/dotnet/aspire/issues/5490)",
      "matchPackageNames": [
        "Aspire.Hosting.AppHost"
      ],
      "allowedVersions": "!/^8\\.2\\.0$/"
    },
    {
      "matchManagers": [
        "nuget"
      ],
      "groupName": "NuGet .NET runtime libraries dependencies",
      "description": "These packages are usually bound to a specific major .NET framework version manually managed in the csproj file.",
      "extends": [
        ":disableMajorUpdates"
      ],
      "matchPackageNames": [
        "/^Microsoft\\.Extensions\\./"
      ]
    }
  ]
}
